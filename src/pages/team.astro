---
import '../styles/global.css';

const pageTitle = "Team"
const identity = {
  firstName: "Charly",
  country: "Colombia",
  occupation: "Software Engineer",
  hobbies: ["🍔 Food", "🏋️‍♂️ Gym", "⚽️ Futball", "🌍 Traveling", "🏓 Ping Pong"],
};
const skills = ["HTML", "CSS", "JavaScript", "Astro", "Python", "Linux"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<style define:vars={{skillColor, fontWeight, textCase}}>
			h1 {
			  color: purple;
			  font-size: 4rem;
			}
			.skill {
			  color: var(--skillColor);
			  font-weight: var(--fontWeight);
			  text-transform: var(--textCase);
			}
		  </style>
	</head>
	<body>
		<a href="/">Home</a>
		<a href="/blog/">Blog</a>
		<h1>{pageTitle} - No somos 🤖, somos reales 👩🏽‍💻👨🏽‍💻</h1>
		<p>Hi my name is {identity.firstName} and I am a {identity.occupation} from {identity.country}.</p>
		<p>My hobbies are:</p>
		<ul>
			{identity.hobbies.map((hobby) => (
				<li>{hobby}</li>
			))}
		</ul>
		<p>I have the following skills:</p>
		<ul>
			{skills.map((skill) => (
				<li class="skill">{skill}</li>
			))}
		</ul>
	</body>
</html>
